            <div id="dm-users">
                <!-- active-dm-user -->

                <% if(latestChats.length > 0){ %>
                    <% latestChats.forEach((user) => { %>
                        <% if(user.fromUser.username === loggedInUser.username){ %>
                            <a href="/direct/<%= user.toUser._id %>">
                                <div class="dm-user">
                                    <div class="dm-user-left">
                                        <div class="dm-user-dp">
